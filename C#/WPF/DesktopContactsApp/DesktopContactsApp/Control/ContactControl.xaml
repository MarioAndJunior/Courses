<UserControl x:Class="DesktopContactsApp.Control.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactsApp.Control"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock x:Name="txtBoxName" 
                       Text="Name Lastname" 
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="txtBoxEmail" 
                       Text="email@email.com" 
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock x:Name="txtBoxPhone" 
                       Text="(123) 456 789" 
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
