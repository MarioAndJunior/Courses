<Window x:Class="DesktopContactsApp.ContactDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="ContactDetailWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtBoxName"
                     Margin="0,0,0,5"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtBoxEmail"
                     Margin="0,0,0,5"/>
            <TextBlock Text="Phone:"/>
            <TextBox x:Name="txtBoxPhone"
                     Margin="0,0,0,5"/>
            <Button Content="Update"
                    x:Name="btnUpdate"
                    Click="btnUpdate_Click"
                    Margin="0 0 0 5"/>
            <Button Content="Delete"
                    x:Name="btnDelete"
                    Click="btnDelete_Click"
                    Margin="0 0 0 5"
                    Background="Red"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
